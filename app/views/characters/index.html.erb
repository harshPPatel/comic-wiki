<h1>List of Characters</h1>

<table>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Total Issues</th>
    <th>Show Links</th>
  </tr>
  <% @characters.each do |character| %>
    <tr>
      <td><%= character.id %></td>
      <td><%= character.name %></td>
      <td><%= character.issues.length %></td>
      <td><%= link_to 'Show', character_path(character) %></td>
    </tr>
  <% end %>
</table>
